{% extends "AppBundle::layout.html.twig" %}

{% block fos_user_content %}
{% if error %}
    <div>{{ error|trans({}, 'FOSUserBundle') }}</div>
{% endif %}
{% block lesheureusesnaissancesplatform_body %}

{% if is_granted("IS_AUTHENTICATED_REMEMBERED") %}
    <div class="alert alert-danger alert-dismissible mt20 col-md-6 col-md-offset-3" role="alert">
        <button type="button" class="close" data-dismiss="alert" aria-label="Close">
            <span aria-hidden="true">×</span>
        </button>
        <strong>Attention !</strong> Vous êtes déjà connecté, vous ne pouvez pas atteindre cette page !
    </div>
    <div class="clearfix"></div>
{% else %}


<div class="col-md-12 bandeau">

    <h1 class="text-center">Connexion</h1>

</div>

<div class="container">
            <div class="row">
            <div class="col-md-4 col-md-offset-4">
                <h4 class="uppercase mt20">J'ai déjà un compte</h4>
                <form action="{{ path("fos_user_security_check") }}" method="post">
                    <input type="hidden" name="_csrf_token" value="{{ csrf_token }}" />


                    <input type="text" id="username" name="_username" value="{{ last_username }}" required="required" placeholder="nom d'utilisateur"/>

                    <input type="password" id="password" name="_password" required="required" placeholder="mot de passe"/>
                    
                    <a href="{{path('fos_user_resetting_request')}}"><p class="lead pull-right">
                                    Mot de passe oublié ?
                    </p></a>

                    
                    

                    <input type="submit" id="_submit" name="_submit" value="{{ 'security.login.submit'|trans({}, 'FOSUserBundle') }}" />
                </form>

                </div>
            </div>
        </div>
{% endif %}
{% endblock %}

{% endblock fos_user_content %}
