

{%extends 'AppBundle::Layout.html.twig'%}
{%block body%}
{%if listUsers!=null%}
  <div class="col-md-12 bandeau">
      <h1 class="text-center">Résultat de la recherche</h1>
  </div>

  {% for user in listUsers %}
      
      <div class="container">
        <div class="col-sm-4 mt20">
          <div class="feature feature-2 bordered" style="padding-bottom:10px;">
              <div class="text-center">
                  {%if user.image!=null%}
                  <a href="{{ path('show', {'username': user.username}) }}">
                    <img src="{{asset(user.image.webPath)}}"  class="center-block img-circle img-responsive">
                  </a>
                  {%else%}
                  <div class="col-sm-2">
                    <a href="{{ path('show', {'username': user.username}) }}">
                      <img  class="img-circle  " src= "http://i57.servimg.com/u/f57/16/18/15/10/1866.jpg" >
                    </a>

                    </div>
                  {%endif%}
                  <h5 class="uppercase username-search mt20">{{user.username}}</h5>
              </div>
              <p class="mb0">
                <strong>Département : </strong>{{user.departement}}
              </p>
              <p class="mb0">
                <strong>Ville : </strong>{{user.ville}}
              </p>
              <p class="mb0">
                <strong>A echangé avec : </strong>{{user.commentaires.count}} mamans
              </p>
              <p class="mb0">
                <strong>{{user.enfants.count}} enfants</strong>
              </p>
              
              
              <div class="text-center mt20">
                <a class="btn" href="{{ path('show', {'username': user.username}) }}">Voir le profil</a>
              </div>
          </div>
          <!--end of feature-->
      </div>
      </div>
   
  {% endfor %}
  {%endif%}

  {%if listMeetUps!=null%}

  {% for meetup in listMeetUps %}
    
      <div class="container">
  
    
      <div class="well panel panel-default">
        <div class="panel-body">
          <div class="row">
            <div class="col-xs-12 col-sm-4 text-center">
        {%if meetup.image!=null%}
              <a href="{{ path('meet_up_view', {'id': meetup.id}) }}">
                <img src="{{asset(meetup.image.webPath)}}"  class="center-block img-circle img-thumbnail img-responsive">
              </a>
        {%else%}
        <div class="col-sm-2">
          <a href="{{ path('meet_up_view', {'id': meetup.id}) }}">
            <img  class="img-circle  " src= "http://i57.servimg.com/u/f57/16/18/15/10/1866.jpg" >
          </a>

          {# Rajouter dans cette partie une vérification avec des "if" si l'image est un café, balade ou expo #}
          

          </div>
        {%endif%}
              
            </div>
            <!--/col--> 
            <div class="col-md-4 col-sm-6">
                        {% if (meetup.image != null) %} 
                                <img src="" alt=""> 
                            {% endif %}
                        <div class="pricing-table pt-2 boxed mb50">

                             <h5 class="uppercase text-center">{{meetup.titre}}</h5> 
                            <p class="pb10">{{meetup.description}}</p>
                            <hr>
                            <ul>
                                <li>
                                    <strong>Département : </strong> {{meetup.departement}}
                                </li>
                                <li>
                                    <strong>Ville : </strong> {{meetup.localisation}}
                                </li>
                                <li>
                                    <strong>Date : </strong> {{meetup.jour1.format('j/m/Y')}}
                                </li>
                            </ul>
                            <div class="text-center">
                                <a class="btn btn-filled btn-lg" href="{{ path('meet_up_view', {'id': meetup.id}) }}">Voir la rencontre</a> 
                            </div>
                        </div>
                <!--end of pricing table-->
            </div>
        </div>
      </div> 
    </div> 
  </div>     
  
  {% endfor %}
{% endif %}
  
  
{%if listUsers==null and listMeetUps==null %}
  <em><h4>Recherche non aboutie<h4></em>

  {%endif%}
  

  {% block javascripts %}
    {# Ajoutez ces lignes JavaScript si vous comptez vous servir des fonctionnalités du bootstrap Twitter #}
    <script src="//ajax.googleapis.com/ajax/libs/jquery/1.11.1/jquery.min.js"></script>
    <script src="//maxcdn.bootstrapcdn.com/bootstrap/3.2.0/js/bootstrap.min.js"></script>
  {% endblock %}

{%endblock%}