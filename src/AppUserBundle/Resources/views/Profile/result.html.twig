

{%extends 'AppBundle::Layout.html.twig'%}
{%block body%}
{%if listUsers!=null%}
  <div class="col-md-12 bandeau">
      <h1 class="text-center">Résultat de la recherche</h1>
  </div>

  {% for user in listUsers %}
      
      <div class="container">
        <div class="col-sm-4 mt20">
          <div class="feature feature-2 bordered" style="padding-bottom:10px;">
         <div class="image-cropper flex-container">
                {% if (user.image)!=null %}

                  <img  class="img-circle img-responsive" src= "{{ asset(user.image.webPath)  }}" alt="{{ user.image.alt }}">
                {% else %}
                  <img  class="img-circle img-responsive" src= "http://i57.servimg.com/u/f57/16/18/15/10/1866.jpg" height="">
                {% endif %}
              </div>
              <p class="mb0">
                <strong>Département : </strong>{{user.departement}}
              </p>
              <p class="mb0">
                <strong>Ville : </strong>{{user.ville}}
              </p>
              <p class="mb0">
                <strong>A echangé avec : </strong>{{user.commentaires.count}} mamans
              </p>
              <p class="mb0">
                <strong>{{user.enfants.count}} enfants</strong>
              </p>
              
              
              <div class="text-center mt20">
                <a class="btn" href="{{ path('show', {'username': user.username}) }}">Voir le profil</a>
              </div>
          </div>
          <!--end of feature-->
      </div>
      </div>
   
  {% endfor %}
  {%endif%}
    
  
{%if listUsers==null %}
  <em><h4>Recherche non aboutie<h4></em>

  {%endif%}
  

  {% block javascripts %}
    {# Ajoutez ces lignes JavaScript si vous comptez vous servir des fonctionnalités du bootstrap Twitter #}
    <script src="//ajax.googleapis.com/ajax/libs/jquery/1.11.1/jquery.min.js"></script>
    <script src="//maxcdn.bootstrapcdn.com/bootstrap/3.2.0/js/bootstrap.min.js"></script>
  {% endblock %}

{%endblock%}