

{% extends "AppBundle::layout.html.twig" %}

{% block title %}
  Modifier Profile - {{ parent() }}
{% endblock %}

{% block lesheureusesnaissancesplatform_body %}

  <div class="col-md-12 bandeau">
      <h1 class="text-center">Modifier mon profil</h1>
  </div>
    {% if app.user.description==null%}
    <div class="clearfix"></div>
<div class="alert alert-success text-center">
  <strong>Félicatation votre profil a bien été créé, pensez à le completer!</strong>
</div>
    {% endif %}


<div class="container">
  <div class="row">
      <!-- left column -->
      <div class="col-md-12">
        <div class="col-md-9 col-md-offset-3 text-center">
            <h3 style="margin-top:20px;">Informations personnelles</h3>
        </div>
        <form class="edit" action="{{ path('fos_user_profile_edit') }}" method="post" {{form_enctype(form)}}>
        <div class="text-center col-md-3" style="margin-top:0px;">
            {%if (app.user.image)!=null%}
              <img src="{{asset(app.user.image.getWebPath)}}" class="avatar img-circle" alt="avatar">
            {%else%}
              <img src="http://i57.servimg.com/u/f57/16/18/15/10/1866.jpg" class="avatar img-circle img-thumbnail">
            {%endif%}

            <h6>Changez votre photo de profil</h6>
              {{ form_errors(form.image) }}
              {{ form_widget(form.image) }}
        </div>
        <div class="col-md-9">
          <div class="personal-info">
            <form class="form-horizontal" role="form">
              <div class="form-group col-md-6">
                {{ form_label(form.nom, "Nom") }}
                {{ form_errors(form.nom) }}
                <div class="clearfix"></div>
                {{ form_widget(form.nom) }}
              </div>
              <div class="form-group col-md-6">
                {{ form_label(form.prenom, "Prénom") }}
                {{ form_errors(form.prenom) }}
                <div class="clearfix"></div>
                {{ form_widget(form.prenom) }}
              </div>
              <hr>
              <div class="form-group col-md-6">
                {{ form_label(form.description, "Description") }}
                {{ form_errors(form.description) }}
                <div class="clearfix"></div>
                {{ form_widget(form.description) }}
              </div>
              
              <div class="form-group col-md-6">
                {{ form_label(form.personnalite, "Personnalité") }}
                <div class="clearfix"></div>
                {{ form_errors(form.personnalite) }}
                {{ form_widget(form.personnalite) }}
              </div>

              <hr>


              <div class="form-group col-md-6">
                {{ form_label(form.adresse, "Adresse") }}
                <div class="clearfix"></div>
                {{ form_errors(form.adresse) }}
                {{ form_widget(form.adresse) }}
              </div>
              <div class="form-group col-md-6">
                {{ form_label(form.ville, "Ville") }}
                <div class="clearfix"></div>
                {{ form_errors(form.ville) }}
                {{ form_widget(form.ville) }}
              </div>
              <div class="form-group col-md-6">
                {{ form_label(form.departement, "Departement") }}
                <div class="clearfix"></div>
                {{ form_errors(form.departement) }}
                {{ form_widget(form.departement) }}
              </div>
              <div class="form-group col-md-6">
                {{ form_label(form.profession, "Profession") }}
                <div class="clearfix"></div>
                {{ form_errors(form.profession) }}
                {{ form_widget(form.profession) }}
              </div>
              <div class="form-group col-md-6">
                {{ form_label(form.telephone, "Téléphone") }}
                <div class="clearfix"></div>
                {{ form_errors(form.telephone) }}
                {{ form_widget(form.telephone) }}
              </div>
              <div class="form-group col-md-6">
                {{ form_label(form.anniversaire, "Anniversaire")}}
                <br>
                {{ form_errors(form.anniversaire) }}
                {{ form_widget(form.anniversaire.day,  { 'type': 'date', 'attr': {'style': 'width:100px;'}}) }}
                {{ form_widget(form.anniversaire.month,  { 'type': 'date', 'attr': {'style': 'width:100px;'}}) }}
                {{ form_widget(form.anniversaire.year,  { 'type': 'date', 'attr': {'style': 'width:100px;'}}) }}
              </div>
          </div>
          {{ form_errors(form) }}
          <input type="submit" value="{{ 'Enregister les modifications' }}" />
          {{ form_end(form) }}
        </div>
      </div>
  </div>
</div>
      
