{% extends 'AppBundle::Layout.html.twig'%}
{% block lesheureusesnaissancesplatform_body %}
  <div class="col-md-12 bandeau">
      <h1 class="text-center">Bloquer des Mamans méchantes </h1>
  </div>

  <div class="row">
    <div class="container">
      <div class="col-md-6 col-md-offset-3">


                <div class="panel-body">
        <table class="table table-condensed">
        
          <thead>
          <tr>
            <th>Nom d'Utilisatrice </th>
            <th>Email</th>
            <th>statut</th>
            
          </tr>
          </thead>
          {% for user in listUsers %}
          <tbody>
          <tr>
            <td>{{ user.username }}</td>
            <td>{{ user.email}}</td>
            {% if user.enabled == 1 %}
            <td> Non Bloqué </td>
            {% else %}
            <td> Bloqué </td>
            {% endif %}

            <td>
            {% if user.enabled == 1 %}
            <a href="{{ path('app_admin_bloquer', {'id': user.id}) }}" class="btn">
      <i class="glyphicon glyphicon-remove text-danger"></i></a>
            {% else %}
            <a href="{{ path('app_admin_debloquer', {'id': user.id}) }}" class="btn">
          
            <i class="glyphicon glyphicon-ok"></i></a>
          {% endif %}
            <td>
          </tr>
          </tbody>
          
          {% if not loop.last %} {% endif %}
         {% endfor %}
        </table>
                </div>

      </div>
    </div>
  </div>
</div>
</div>

<div class="clearfix"></div>

{% block javascripts %}
    {# Ajoutez ces lignes JavaScript si vous comptez vous servir des fonctionnalités du bootstrap Twitter #}
    <script src="//ajax.googleapis.com/ajax/libs/jquery/1.11.1/jquery.min.js"></script>
    <script src="//maxcdn.bootstrapcdn.com/bootstrap/3.2.0/js/bootstrap.min.js"></script>
  {% endblock %}
  {%endblock%}
