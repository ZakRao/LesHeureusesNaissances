{% extends "AppBundle::layout.html.twig" %}

{% block body %}

<div class="col-md-12 bandeau">
    <h1 class="text-center">Inscription</h1>
</div>
{% block lesheureusesnaissancesplatform_body %}
	<div class="container">
            <div class="row">
            <div class="col-md-8 col-md-offset-2">
            <h4 class="uppercase mt20">Cr√©er un compte</h4>
			<form action="{{ path('fos_user_registration_register') }}" {{ form_enctype(form) }} method="POST" class="fos_user_registration_register">


         {{ form_start(form, {'attr': {'class': 'form-horizontal'}}) }}
        {{ form_widget(form.username, { 'attr': {'class': 'form-control', 'placeholder': 'form.username'|trans } }) }}
        {{ form_errors(form.username) }}


        {{ form_widget(form.email, { 'attr': {'class': 'form-control', 'placeholder': 'form.email'|trans } }) }}
        {{ form_errors(form.email) }}

        {{ form_widget(form.plainPassword.first, { 'attr': {'class': 'form-control', 'placeholder': 'form.password'|trans } }) }}
        {{ form_errors(form.plainPassword.first) }}

        {{ form_widget(form.plainPassword.second, { 'attr': {'class': 'form-control', 'placeholder': 'form.password_confirmation'|trans } }) }}
        {{ form_errors(form.plainPassword.second) }}


        {{ form_widget(form.nom, { 'attr': {'class': 'form-control','required':'required' ,'placeholder': 'nom'|trans } }) }}
        {{ form_errors(form.nom) }}


        {{ form_widget(form.adresse, { 'attr': {'class': 'form-control', 'required':'required', 'placeholder': 'adresse'|trans } }) }}
        {{ form_errors(form.adresse) }}


        {{ form_widget(form.parrain, { 'attr': {'class': 'form-control', 'required':'required',  'placeholder': 'parrain'|trans } }) }}
        {{ form_errors(form.parrain) }}

        {{ form_rest(form) }}


        	<input type="submit" value="{{ 'registration.submit'|trans({}, 'FOSUserBundle') }}" />

            {{ form_end(form) }}
    
    </div>
            </div>
        </div>
</form>

{% endblock %}
{% endblock %}


