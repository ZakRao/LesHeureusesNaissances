{% extends "MeetUpBundle:MeetUp:layout.html.twig" %}

{% block title %}
  Rencontre {{ parent() }}
{% endblock %}

{% block body %}

  <h2>Rencontre</h2>

  {{ meet_up.id }}
  {{ meet_up.titre }}

  <p> 
    Jour 1 : {{ meet_up.jour1|date('Y-m-d') }} , <a href="{{ path('add_vote_jour1', {'id' : meet_up.id}) }}" class="btn btn-danger"> Test </a>
    {{ meet_up.vote_jour1 }} 
  </p>
  <p> 
    Jour 2 : {{ meet_up.jour2|date('Y-m-d') }} , <a href="{{ path('add_vote_jour2', {'id' : meet_up.id}) }}"> Test </a>
    {{ meet_up.vote_jour2 }} 
  </p>
  <p> 
